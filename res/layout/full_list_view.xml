        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:id="@+id/fullListView" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data"
            android:id="@+id/textView" android:layout_centerInParent="true"/>
</RelativeLayout>