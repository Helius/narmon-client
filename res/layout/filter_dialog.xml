<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show:"
                android:id="@+id/textView" android:layout_gravity="center_vertical" android:textSize="20dp"
                android:textStyle="bold"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:id="@+id/radiogroupe_All_My" >
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/radioButtonAll" android:layout_marginLeft="20dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My only"
                    android:id="@+id/radioButtonMyOnly" android:layout_marginLeft="10dp"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:id="@+id/textView2" android:textSize="20dp" android:textStyle="bold"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:id="@+id/checkBoxTemperature"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:id="@+id/checkBoxPressure"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:id="@+id/checkBoxHumidity"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other type"
                    android:id="@+id/checkBoxOtherType"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout" android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sort by:"
                  android:id="@+id/textView1" android:layout_gravity="center_vertical" android:textSize="20dp"
                  android:textStyle="bold"/>
        <RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radiogroupe_sort">
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name"
                         android:id="@+id/radioButtonSortName" android:layout_marginLeft="20dp"/>
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Distance"
                         android:id="@+id/radioButtonSortDistance" android:layout_marginLeft="10dp"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>